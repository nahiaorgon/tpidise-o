@page "/Empleados/Ventas/FacturarVentaCliente"
@using Reciplas.Models;
@inject NotificationService NotificationService 
@inherits OwningComponentBase<Usuario>
@inject DialogService DialogService  
@inject NavigationManager NavigationManager  
@using Reciplas.Clases;
@using Reciplas.Repositorio;
@inject IRepositorioVentas RepositorioVentas;

<PageTitle>Areas</PageTitle>
<TituloPrincipal TextoPrincipal="Ventas" TextoSecundario="Facturación" />
 
    <RadzenStack Orientation="Orientation.Vertical" Gap="1rem" Class="rz-p-4 rz-mb-6 rz-border-radius-1" >
         
    </RadzenStack> 
    <RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap" Gap="1rem">
        <RadzenFormField Text="Nombre del Cliente" Variant="@variant" Style="flex: 1;">
            <RadzenTextBox @bind-Value="@valueN" Disabled="@disabled" />
        </RadzenFormField>
        <RadzenFormField Text="Direccion" Variant="@variant" Style="flex: 1;">
            <RadzenTextBox @bind-Value="@valueD" Disabled="@disabled" />
        </RadzenFormField>
        <RadzenFormField Text="DNI" Variant="@variant" Style="flex: 1;">
            <RadzenNumeric @bind-Value="@intValueD" Disabled="@disabled" />
        </RadzenFormField> 
         <RadzenFormField Text="Teléfono" Variant="@variant" Style="flex: 1;">
            <RadzenNumeric @bind-Value="@intValueH" Disabled="@disabled" />
        </RadzenFormField> 
        </RadzenStack>
        <br> <br>
         <RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap" Gap="1rem">
         <RadzenFormField Text="N° del Pedido" Variant="@variant" Style="flex: 1;">
            <RadzenNumeric @bind-Value="@intValueA" Disabled="@disabled" />
        </RadzenFormField>
         <RadzenFormField Text="Descripción" Variant="@variant" Style="flex: 1;">
            <RadzenTextBox @bind-Value="@valueB" Disabled="@disabled" />
        </RadzenFormField>
        
        <RadzenFormField Text="N° del Vendedor" Variant="@variant" Style="flex: 1;">
            <RadzenNumeric @bind-Value="@intValueP" Disabled="@disabled" />
        </RadzenFormField> 
        <RadzenFormField Text="Total Factura" Variant="@variant" Style="flex: 1;">
            <RadzenNumeric @bind-Value="@intValueT" Disabled="@disabled" />
        </RadzenFormField>
    </RadzenStack>

    <br> 
<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
   <RadzenButton Click="@(args => NavigationManager.NavigateTo("/ventas"))" Text="Finalizar" Icon="note_add" ButtonStyle="ButtonStyle.Primary" /> 
    <RadzenButton Click="@(args => NavigationManager.NavigateTo("/ventas"))" Text="Volver" Icon="refresh" ButtonStyle="ButtonStyle.Light" /> 
</RadzenStack> 



@code {
    bool disabled = false;
    Variant variant = Variant.Outlined; 

    string valueN = "Chiara";
    string valueD = "French 414";
    string valueB = "Producto dañado";
    int intValueD = 12365445;
    int intValueP = 456;
    int intValueH = 4123456;
    int intValueA = 15; 
    int intValueC = 78000;  
    int intValueT = 78000;  
    protected override async Task OnInitializedAsync()
    {
       await base.OnInitializedAsync(); 
    }
     
}