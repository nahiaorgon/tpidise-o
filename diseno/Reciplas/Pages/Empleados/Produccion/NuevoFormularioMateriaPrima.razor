@page "/Empleados/Produccion/NuevoStockPrimaFormulario"
@inject NotificationService NotificationService 
@inherits OwningComponentBase<Usuario> 
@inject NavigationManager NavigationManager

<TituloPrincipal TextoPrincipal="Produccion" TextoSecundario="Stock materia prima" />

<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

@if (stocksprima == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <RadzenTemplateForm Data="@stocksprima" Submit="@((StocksPrima args) => { Submit(args); })">
    <div class="container-fluid">
            <div class="col-md-6">
                <RadzenFieldset Text="Nuevo">
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Nombre" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div> 
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Proveedor" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Fecha"/>
                            
                        </div>
                        <div class="col-md-10">
                            <RadzenDatePicker style="width: 30%;" Name="ExpiryDate" @bind-Value=@value ShowTime="true" DateFormat="dd/MM/yyyy"  />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Cantidad" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Kg por item" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                </RadzenFieldset>


        <br>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">            
            <a href="/Empleados/Produccion/Stocks"><RadzenButton Style="margin-left:70px" Click=@(args => OnClick("Registro Guardado")) Variant="Variant.Flat" Shade="Shade.Lighter"  Text="Guardar" Icon="check_circle" ButtonStyle="ButtonStyle.Success"  /></a>
            <a href="/Empleados/Produccion/Stocks"><RadzenButton Style="margin-left:100px" Click=@(args => OnClick("Registro sin guardar")) Variant="Variant.Flat" Shade="Shade.Lighter"  Text="Volver" Icon="history" ButtonStyle="ButtonStyle.Secondary" /></a>
            
            </RadzenStack>
            
    </div>
    </div>

    </RadzenTemplateForm>
}

@code { 
    DateTime value = DateTime.Now; 
    StocksPrima stocksprima = new StocksPrima()
    { 
    }; 

    void Submit(StocksPrima arg)
    {
        //
    }
    private void OnClick(string text)
    {
        NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Warning, Detail = text });
    }
    

}
